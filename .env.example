# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
APP_NAME=NestJS Backend Base
APP_DESCRIPTION=A robust NestJS backend following Bulletproof architecture principles
API_VERSION=1.0.0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=nest_backend_base
DB_SCHEMA=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-it
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-it
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_DIR=logs
LOG_FILE_PREFIX=app

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100 