{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/utils/*"],
      "@common/*": ["src/common/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@persistence/*": ["src/infrastructure/persistence/*"],
      "@users/*": ["src/users/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "test/jest.setup.js", "prisma/seed.ts"],
  "exclude": ["node_modules", "dist"]
}
